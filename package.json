{
  "name": "tauri-plugin-mpv-api",
  "version": "0.2.7",
  "author": "22",
  "description": "A Tauri plugin to embed the mpv player in your app via JSON IPC.",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/nini22P/tauri-plugin-mpv",
  "repository": {
    "type": "git",
    "url": "https://github.com/nini22P/tauri-plugin-mpv.git"
  },
  "bugs": {
    "url": "https://github.com/nini22P/tauri-plugin-mpv/issues"
  },
  "keywords": [
    "tauri",
    "plugin",
    "mpv",
    "media",
    "player",
    "video",
    "audio",
    "rust",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "types": "./dist-js/index.d.ts",
  "main": "./dist-js/index.cjs",
  "module": "./dist-js/index.js",
  "exports": {
    "types": "./dist-js/index.d.ts",
    "import": "./dist-js/index.js",
    "require": "./dist-js/index.cjs"
  },
  "files": [
    "dist-js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:plugin:mpv": "pnpm --filter ./plugins/tauri-plugin-mpv build",
    "build:plugin:libmpv": "pnpm --filter ./plugins/tauri-plugin-libmpv build",
    "build:example:mpv": "pnpm build:plugin:mpv && pnpm --filter tauri-plugin-mpv-example tauri build",
    "build:example:libmpv": "pnpm build:plugin:libmpv && pnpm --filter tauri-plugin-libmpv-example tauri build",
    "dev:example:mpv": "pnpm build:plugin:mpv && cd examples/mpv-example && pnpm tauri dev",
    "dev:example:libmpv": "pnpm build:plugin:libmpv && cd examples/libmpv-example && pnpm tauri dev",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jiti": "^2.6.0",
    "typescript-eslint": "^8.44.1"
  }
}